{% extends "layout/coreui/principal.html.twig" %}
{% set active = 'types' %}
{% set title = 'Manage types'|trans %}

{% block content %}
    <div class="row">
        <div class="col-sm-7">
            <div class="card">
                <div class="card-header">
                    <strong>{{ 'Type List'|trans }}</strong>
                    <form action="" method="post" class="form-inline">
                        <div class="form-group pull-right">
                            <label class="sr-only" for="search">{{ 'Search'|trans }}</label>
                            <input type="text" id="search" name="search" class="form-control">
                        </div>
                    </form>
                </div>
                <div class="card-block">
                    <table class="table datatable">
                        <thead>
                        <tr>
                            <th>{{ 'ID'|trans }}</th>
                            <th>{{ 'Grupo'|trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for type in types %}
                            <tr>
                                <td><a href="{{ path('type_edit',{ 'id':type.id }) }}"
                                       class="type_edit tag tag-pill tag-info">{{ type.id }}</a></td>
                                <td>{{ type.name }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm-5">
            <div class="card">
                <div class="card-header">
                    <strong>{{ 'Add Type' }}</strong>
                </div>
                <form action="{{ path('type_save') }}" method="post">
                    <div class="card-block">
                        <div class="form-group">
                            <label for="name">{{ 'Name'|trans }}</label>
                            <input type="text" class="form-control" name="name">
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary"><i
                                    class="fa fa-floppy-o"></i> {{ 'Save'|trans }}</button>
                        <button type="reset" class="btn btn-secondary pull-right"><i
                                    class="fa fa-times"></i> {{ 'Cancel'|trans }}
                        </button>
                    </div>
                </form>
            </div>
        </div>
        <!--/col-->
    </div>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script src="/assets/views/type/type_edit.js"></script>
{% endblock %}