<form action="{{ path('group_save') }}" method="post">
    <div class="modal-header">
        <h5 class="modal-title" id="modalLabel">{{ 'Edit Group'|trans }}
            <button type="button" class="close" data-dismiss="modal" aria-label="{{ 'Cancel'|trans }}">
                <span aria-hidden="true">&times;</span>
            </button>
        </h5>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label for="id">{{ 'ID'|trans }}</label>
            <input type="text" class="form-control" value="{{ group.id }}" disabled>
            <input type="hidden" name="id" value="{{ group.id }}">
        </div>
        <div class="form-group">
            <label for="name">{{ 'Name'|trans }}</label>
            <input type="text" class="form-control" name="name" value="{{ group.name }}">
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-primary pull-left"><i
                    class="fa fa-floppy-o"></i> {{ 'Save'|trans }}</button>
        <button type="button" class="btn btn-danger"><i
                    class="fa fa-trash"></i> {{ 'Delete'|trans }}</button>
        <button type="reset" class="btn btn-secondary" data-dismiss="modal"><i
                    class="fa fa-times"></i> {{ 'Cancel'|trans }}
        </button>
    </div>
</form>
